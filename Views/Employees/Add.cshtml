@model EmployeeManagement.Models.AddEmployeeViewModel
@{
}
<h1>Add Employees</h1>
<form method="post" action="Add">
    <div class="mb-3">
        <label for="" class="form-label">Employee Id</label>
        <input type="number" class="form-control" asp-for="EmployeeId">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Employee Name</label>
        <input type="text" class="form-control" asp-for="EmployeeName">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Empployee Age</label>
        <input type="number" class="form-control" asp-for="EmployeeAge">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Employee Email Id</label>
        <input type="email" class="form-control" asp-for="Email">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Salary</label>
        <input type="int" class="form-control" asp-for="salary">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Street</label>
        <input type="text" class="form-control" asp-for="Street">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">City</label>
        <input type="text" class="form-control" asp-for="City">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Region</label>
        <input type="text" class="form-control" asp-for="Region">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Date of Birth</label>
        <input type="text" class="form-control" asp-for="DateOfBirth">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>